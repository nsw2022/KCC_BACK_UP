package kosa.mission;

import java.util.Scanner;

public class Mission05 {

	public static void main(String[] args) {
		// 메뉴를 선택해서 해당 메뉴를 명령문을 실행해보자.
		// 1.추가 2.출력 3.검색 4.종료
		
		System.out.println("승우네 한식집에 오신걸 확영합니다 메뉴를 추가해주세요");
		String strValue = "Hello Java Programming";
		char[] charArray = new char[4];

		strValue.getChars(6, 10, charArray, 0);

		System.out.println(charArray);
		System.out.println(strValue.indexOf("Java"));
		System.out.println(strValue.indexOf("Java")+"Java".length());
		
		
		Scanner sc = new Scanner(System.in);
		String flag,userinput = null, totalMenu = "";
		char[] resultArray = new char[100];
		while(true) {
			System.out.println("1.추가 2.출력 3.검색 4.종료");
			System.out.print("골라주세용 :");
			flag = sc.nextLine();
			if(flag.equals("1")) {
				System.out.println("메뉴를 추가하겠습니다.");
				userinput =sc.nextLine();
				totalMenu+= userinput+" ";
				System.out.println();
			}else if(flag.equals("2")) {
				System.out.print("지금 까지 메뉴는: ");
				System.out.println(totalMenu);
				System.out.println();
			}else if(flag.equals("3")) {
				System.out.println("입력해주세요.");
				userinput =sc.nextLine();
				System.out.println(totalMenu.indexOf(userinput));
				totalMenu.getChars(totalMenu.indexOf(userinput),
						totalMenu.indexOf(userinput)+userinput.length(), resultArray, 0);
				System.out.println(resultArray);
				System.out.println();
				
			}else if(flag.equals("4")) {
				System.out.println("빠이빠이");
				break;
			}
		}

	}

}
